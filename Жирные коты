#include "stdafx.h"
#include<iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "RUSSIAN");
	double a, b;
	cout << "Введите массу первого кота: ";
	cin >> a;
	cout << "Введите массу второго кота: ";
	cin >> b;

	if (a > 5) {
		cout << "Первый кот страдает ожирением!" << endl;
	}
	else if (b>5) {
		cout << "Второй кот страдает ожирением!" << endl;
	} 
	else if ((a > 5) && (b > 5)) {
		cout << "Они оба жирные!" << endl;
	}
	else {
		cout << "Обы кота здоровы!" << endl;
	}
	system("pause"); 
    return 0;
}
